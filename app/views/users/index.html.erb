<div class="px-4 sm:px-6 lg:px-8 w-full">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold leading-6 text-gray-900">Users</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all users in your account including their name, email, and status.</p>
    </div>
  </div>

  <div class="mt-8">
    <%= render "filter_form" %>
  </div>

  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <%= turbo_frame_tag "users_list" do %>
          <%= render "users_list", users: @users %>
        <% end %>
      </div>
    </div>
  </div>
</div>
